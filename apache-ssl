<VirtualHost *:80>
        ServerAdmin webmaster@localhost
        ServerName www.fapeam.am.gov.br
        ServerAlias fapeam.am.gov.br
        DocumentRoot /var/www/fapeam

        <Directory /var/www/fapeam/>
                Options FollowSymLinks MultiViews
                AllowOverride All
                Order allow,deny
                allow from all
        </Directory>

